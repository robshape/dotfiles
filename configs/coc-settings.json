{
  "bashIde.backgroundAnalysisMaxFiles": 0,
  "bashIde.shellcheckPath": "",
  "coc.preferences.formatOnSave": true,
  "colors.enable": true,
  "eslint.autoFixOnSave": true,
  "eslint.run": "onSave",
  "git.realtimeGutters": false,
  "go.goplsOptions": {
    "gofumpt": true,
    "staticcheck": true
